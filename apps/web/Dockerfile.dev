FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY turbo.json ./
COPY apps/web/package*.json ./apps/web/
COPY packages/types/package*.json ./packages/types/
COPY packages/ui/package*.json ./packages/ui/

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build shared packages
RUN npm run build --workspace=@orbmania/types
RUN npm run build --workspace=@orbmania/ui

EXPOSE 12000

CMD ["npm", "run", "dev", "--workspace=@orbmania/web"]